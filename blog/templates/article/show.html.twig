{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}


    <div class="jumbotron">
        <div class="text-center"><H1>Article</H1></div>
        <a href="{{ path('app_index') }}">Retour Ã  l'accueil</a>
    </div>


    <div class="container">
        <table class="table table-dark">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.content }}</td>
                <td>
                <a onclick="addToFavorite()">{{ isFavorite ? '<i id="favorite" class="fas fa-heart"></i>' :
                    '<i id="favorite" class="far fa-heart"></i>' }}</a>
                </td>
            </tr>
            </tbody>
        </table>
        <table class="table table-dark">
            <tbody>
            <tr>
                <td>
                    <a class="btn btn-warning" href="{{ path('article_index') }}">back to list</a>
                </td>
                <td>
                    {% if is_granted('ROLE_AUTHOR') %}
                <a class="btn btn-success" href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                    {% endif %}
                </td>
                <td>
                {{ include('article/_delete_form.html.twig') }}
                </td>
                <td>

            </tr>
            </tbody>
        </table>
    </div>
    <script>
        function addToFavorite() {
            fetch('{{ path('article_favorite', {'id': article.id}) }}')
                .then(response => response.json())
                .then(json => {
                    let favoriteElt = document.getElementById('favorite');
                    if (json.isFavorite) {
                        favoriteElt.classList.remove('far');
                        favoriteElt.classList.add('fas');
                    }
                    else {
                        favoriteElt.classList.remove('fas');
                        favoriteElt.classList.add('far');
                    }
                });
        }

    </script>

{% endblock %}
