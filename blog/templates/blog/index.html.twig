{# templates/blog/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}All articles{% endblock %}

{% block body %}

    {{ app.session.get('total') }}


        <div class="row">
            {{ form_start(form) }}
            {{ form_row(form.searchField) }}
            <button class="btn btn-secondary">{{ button_label|default('Search') }}</button>
            {{ form_end(form) }}
        </div>

    <div class="container">
        <div class="row">
            {% for article in articles %}
                <div class="col-3">
                    <div class="card text-white bg-dark mb-3" style="max-width: 20rem;">
                        <img src="/images/vinyl.jpg" alt="Card-img-top" style="width: 100%; height: auto;">
                        <div class="card-body">
                            <h5 class="card-title">{{ article.title }}</h5>
                            <p class="card-text">{{ article.content }}</p>
                            <p class="card-text">{{ article.category.name }}</p>
                            {% for tag in article.tags %}
                                <p class="card-text">{{ tag.name }}</p>
                            {% else %}
                                <p>Pas de tags pour cet article</p>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="container">
        <div>
            <ul class="pagination pagination">
                <li class="page-item disabled">
                    <a class="page-link" href="#">&laquo;</a>
                </li>
                <li class="page-item active">
                    <a class="page-link" href="#">1</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">2</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">3</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">4</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">5</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">&raquo;</a>
                </li>
            </ul>
        </div>
    </div>


{% endblock %}