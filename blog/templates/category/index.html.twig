{# templates/blog/category.html.twig #}
{% extends 'base.html.twig' %}


    {% block body %}
        <div class="jumbotron">
            <div class="text-center"><H1>Categories index</H1></div>
            <a href="{{ path('app_index') }}">Retour Ã  l'accueil</a>
        </div>

        <div class="container">
            <table class="table table-dark">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.name }}</td>
                        <td>
                            <a href="{{ path('category_show', {'name': category.name}) }}">show</a>
                            <a href="{{ path('category_edit', {'id': category.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('category_new') }}">Create new</a>
        </div>
    {% endblock %}