{# templates/blog/category.html.twig #}
{% extends 'base.html.twig' %}


    {% block body %}
       <H1>Categories index</H1>

        <div class="container">
            <table class="table table-dark">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.name }}</td>
                        <td>
                            <a class="btn btn-outline-light btn-sm" href="{{ path('category_show', {'name': category.name}) }}"><i class="far fa-eye"></i></a>
                            <a class="btn btn-outline-light btn-sm" href="{{ path('category_edit', {'id': category.id}) }}"><i class="far fa-edit"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a class="btn btn-warning"  href="{{ path('category_new') }}">Create new</a>
        </div>
    {% endblock %}