{% extends 'base.html.twig' %}

{% block title %}Tag index{% endblock %}

{% block body %}

    <H1>Tag index</H1>

<div class="container">
    <table class="table table-dark">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.id }}</td>
                <td>{{ tag.name }}</td>
                <td>
                    <a class="btn btn-outline-light btn-sm"href="{{ path('tag_show', {'name': tag.name}) }}"><i class="far fa-eye"></i></a>
                    <a class="btn btn-outline-light btn-sm" href="{{ path('tag_edit', {'id': tag.id}) }}"><i class="far fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-warning" href="{{ path('tag_new') }}">Create new</a>
</div>
{% endblock %}